<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="40dp"
            android:layout_height="match_parent" />


            <TextView
                android:id="@+id/tv1"
                android:text="品名"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv2"
                android:text="规格"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv3"
                android:text="件数"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv4"
            android:text="每箱数量"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv5"
            android:text="总数量"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv6"
            android:text="单价"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv7"
            android:text="总价"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView

            android:id="@+id/tv8"
            android:text="体积"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView

            android:id="@+id/tv9"

            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <TextView

            android:id="@+id/tv10"

            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>
        <Button
            android:text="删除"
            android:id="@+id/btsc"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#e53935"
            android:textColor="#eeeeee"/>

        <Button
            android:text="修改"
            android:id="@+id/btxg"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#e75000"
            android:textColor="#eeeeee"/>




</LinearLayout>